<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorldApp.Quiz1"
             Title="Quiz1"
             BackgroundImageSource="quatro.png">
    
    <ContentPage.Content>
        <ScrollView>
        <VerticalStackLayout>
        <Label
         TextColor="White"
         Margin="30"
         FontAttributes="Bold"
         FontSize="30"
         HorizontalOptions="Center"
         HorizontalTextAlignment="Center"
         Text="HELLO WORLD!"
         VerticalOptions="Center"
         FontFamily="CustomFont" 
         CharacterSpacing="2"/>
                <Border
                 Margin="0,30" 
                 Stroke="#1e1e1e"
                 StrokeShape="RoundRectangle 20"
                 StrokeThickness="2"
                 BackgroundColor="#625EFB"
                 HorizontalOptions="Fill"
                 VerticalOptions="Start">
                    <VerticalStackLayout>
                <Label
                     Margin="20"
                     FontAttributes="Bold"
                     FontSize="18"
                     HorizontalOptions="Center"
                     HorizontalTextAlignment="Center"
                     Text="&lt;JÁ PROGRAMOU ANTES?/>"
                     VerticalOptions="Center"
                    TextColor="White">
                </Label>
                <Button
                    Margin="30,50"
                    Padding="10,20"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="SIM">
                </Button>
                <Button
                    Margin="30,50"
                    Padding="10,20"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="NÃO">
                </Button>
            </VerticalStackLayout>
        </Border>

            <Button
         Margin="30,50"
         Padding="10,20"
         FontAttributes="Bold"
         FontSize="24"
         Text="RESPONDER" />
        </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>