                <Button
                    Margin="30,50"
                    Padding="10,20"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="SIM">
                </Button>
                <Button
                    Margin="30,50"
                    Padding="10,20"
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="NÃO">
